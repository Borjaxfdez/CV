<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    tools:context="com.example.alumno.cv.MainActivity"
    android:scrollbars="vertical"
    android:background="#616161">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="BORJA FERNÁNDEZ TORRES"
        android:id="@+id/t1"
        android:textSize="23dp"
        android:layout_margin="10dp"
        android:textColor="#ffffff" />

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/t1"
        android:textAlignment="center"
        android:id="@+id/tableLayout"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="40dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="100dp">

            <Button
                android:layout_width="fill_parent"
                android:layout_height="100sp"
                android:text="DATOS"
                android:id="@+id/b1"
                android:width="50dp"
                android:background="#f44336"
                android:layout_column="2"
                android:layout_weight="0.5"
                android:height="40dp"
                android:onClick="datos"
                android:textSize="25sp"
                android:textColor="#ffffff" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="100sp"
                android:text="ESTUDIOS"
                android:id="@+id/button"
                android:width="50dp"
                android:layout_weight="0.5"
                android:layout_column="12"
                android:background="#4caf50"
                android:onClick="estudios"
                android:textSize="25sp"
                android:textColor="#ffffff" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5">

            <Button
                android:layout_width="fill_parent"
                android:layout_height="100sp"
                android:text="IDIOMAS"
                android:id="@+id/button3"
                android:layout_column="2"
                android:layout_weight="0.5"
                android:background="#03a9f4"
                android:onClick="idiomas"
                android:textSize="25sp"
                android:textColor="#ffffff" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="100sp"
                android:text="EXPERIENCIA"
                android:id="@+id/button4"
                android:layout_column="12"
                android:layout_weight="0.5"
                android:background="#ff9800"
                android:onClick="exp"
                android:maxWidth="100sp"
                android:textSize="25sp"
                android:minHeight="100sp"
                android:textColor="#ffffff" />
        </TableRow>
    </TableLayout>

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/call"
        android:layout_below="@+id/tableLayout"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:onClick="llamar"/>

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageButton2"
        android:background="@drawable/bgmail"
        android:layout_alignTop="@+id/imageButton"
        android:layout_toRightOf="@+id/imageButton"
        android:layout_toEndOf="@+id/imageButton"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:onClick="email"/>

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageButton3"
        android:layout_alignBottom="@+id/imageButton2"
        android:layout_toRightOf="@+id/imageButton2"
        android:layout_toEndOf="@+id/imageButton2"
        android:background="@drawable/bmaps"
        android:layout_below="@+id/tableLayout"
        android:adjustViewBounds="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:onClick="maps"/>

</RelativeLayout>
